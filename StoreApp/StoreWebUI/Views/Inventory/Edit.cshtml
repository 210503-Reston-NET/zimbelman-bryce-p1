@model IEnumerable<StoreWebUI.Models.InventoryVM>
@{int i = 0; }
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Store Inventory</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @foreach (InventoryVM item in Model)
            {
                string itemName = "itemName" + i;
             <div class="form-group">
                 <label class="control-label">@ViewData[itemName].ToString() Current: @item.Quantity</label>
                <input name="@ViewData[itemName]" class="form-control" id="@ViewData[itemName]" />
             <span class="text-danger"></span>
        </div>
                i++; }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Location" asp-action="Index">Back to List</a>
</div>

