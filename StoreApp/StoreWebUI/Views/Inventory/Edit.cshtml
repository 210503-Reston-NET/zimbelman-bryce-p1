@model IEnumerable<StoreWebUI.Models.InventoryVM>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Store Inventory</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @foreach (InventoryVM item in Model)
            {
             <div class="form-group">
                <label @Html.DisplayFor(modelItem => item.Quantity) class="control-label"></label>
                <input @Html.TextAreaFor(modelItem => item.Quantity) class="form-control" />
             <span class="text-danger"></span>
        </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

